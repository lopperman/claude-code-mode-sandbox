{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["servers/**/*.ts", "executor/**/*.ts", "mcp-server/**/*.ts", "test/**/*.ts", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
